<div>
  <%= flash[:notice] %>
<div>
<br>
<div class="container">
  <div class="row">
    <div class="px-3 mr-auto">

    <div class="col-1"></div>
    <div class="col-5 text-center">
      <h4 class="bg-warning">新規会員登録</h4>
    </div>

    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

    <div class="col-md-12 text-center">
      <table class="table table-borderless">
        <tr>
          <td>名前</td>
          <td>（姓)</td>
          <td><%= f.text_field :last_name, placeholder: "令和" %></td>
        </tr>
        <tr>
          <td></td>
          <td>（名)</td>
          <td><%= f.text_field :first_name, placeholder: "道子" %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td>（セイ)</td>
          <td><%= f.text_field :last_name_kana, placeholder: "レイワ" %></td>
        </tr>
        <tr>
          <td></td>
          <td>（メイ)</td>
          <td><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></td>
        </tr>

        <tr>
          <td>電話番号<small>（ハイフンなし）</small></td>
          <td></td>
          <td><%= f.text_field :telephone_number, placeholder: "0000000000" %></td>
        </tr>

        <tr>
          <td>パスワード<small>(６文字以上)</small></td>
           <td></td>
           <td><%= f.password_field :password, autocomplete: "new-password" %></td>
         </tr>

        <tr>
          <td>パスワード<small>(確認用)</small></td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>

        <tr>
          <td></td><td></td>
          <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
        <tr>
       </table>
      </div>
      <% end %>

      <h2>既に登録済みの方</h2>
      <%= link_to "こちら", new_user_session_path %>　からログインしてください。
    </div>
  </div>
</div>
