<% if users.exists? %>
  <% users.each do |user| %>
    <table class="table table-hover table-inverse">
      <tr>
        <td width="100"> <%= image_tag user.get_profile_image, size: "80x80", class:"rounded-circle" %></td>
        <td width="450">
          <%= link_to  user_path(user.id) do %>
            <%= user.last_name %><%= user.first_name %>
          <% end %>
          &emsp;&emsp;
          <small>
            フォロー<%= user.followings.count %>&emsp;&emsp;
            フォロワー<%= user.followers.count %>
          </small>
        </td>
      </tr>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
