<div>
  <%= flash[:notice] %>
</div>
<br>

<div class="container">

  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 text-center">
      <h4 class="bg-warning">商品詳細</h4>
    </div>
  </div>

  <br>
  <div class="row">
    <div class="col-md-4">
      <% if @item.image.present? %>
        <%= image_tag @item.image, size: "400x200" %>
      <% else %>
        <%= image_tag 'default-image.jpg', size: "400x200" %>
      <% end %>
    </div>

    <div class="col-1"></div>

    <div class="col-5">

     <table class="table table-borderless">
      <tr>
        <td width="150">商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>税込価格<br><small>(税抜価格）</small></td>
        <td>¥<%= @item.add_tax_price.to_s(:delimited) %>
           <small>(¥<%= @item.price.to_s(:delimited) %>)</small>
        </td>
      </tr>
    </table>
   </div>
  </div>

  <div class="row">
    <div class="col-6"></div>
    <div class="col-5">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %>
    </div>
  </div>
</div>