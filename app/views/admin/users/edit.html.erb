<%= render 'layouts/error_messages', resource: @user %>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-sm-12">
      <h4 style="color: #800000">🌹︎<%= @user.last_name %><%= @user.first_name %>さん︎ Edit🌹</h4>
    </div>
  </div>
  <div class="row">
    <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
      <table>
        <tr>
          <td width="30%" height="40">会員画像</td>
          <td><%= f.file_field :profile_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td width="160" height="40">会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td width="160" height="40">名前（性）</td>
          <td>
            <%= f.text_field :last_name %>
          </td>
        </tr>
        <tr>
          <td width="160" height="40">名前（名）</td>
          <td>
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <td width="160" height="40">フリガナ（セイ）</td>
          <td>
            <%= f.text_field :last_name_kana %>
          </td>
        </tr>
        <tr>
          <td width="160" height="40">フリガナ（メイ）</td>
          <td>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
         <td class="align="left" valign="top"" width="160" >プロフィール</td>
          <td><%= f.text_area :introduction, :size=>"35x7" %></td>
        </tr>
        <tr>
          <td width="160" height="40">メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td width="160" height="40">電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td width="160" height="40">会員ステータス</td>
          <td>
            <%= f.radio_button :is_deleted, false %>有効 &nbsp;
            <%= f.radio_button :is_deleted, true %>退会
          </td>
        </tr>
        <tr>
          <td width="160" height="80"><%= link_to "<Back", admin_user_path(@user.id) %></td>
          <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>