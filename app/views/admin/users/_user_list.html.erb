<table class="table table-hover table-inverse">
  <tr>
  <small>
    <th width="100"></th>
    <th width="150">会員ID</th>
    <th width="300">氏名</th>
    <th width="300">メールアドレス</th>
    <th width="150">ステータス</th>
  </small>
  </tr>
  <% users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image, size: "80x80", class:"rounded-circle" %></td>
      <td><%= user.id %></td>
      <td><%= link_to user.last_name, admin_user_path(user.id) %><%= link_to user.first_name, admin_user_path(user.id) %></td>
      <td><%= user.email %></td>
      <td><% if user.is_deleted == false %>
          有効
          <% else %>
          退会
          <% end %>
      </td>
    </tr>
  <% end %>
  <% if users.size == 0 %>
    <p>ユーザーはいません</p>
  <% end %>
</table>